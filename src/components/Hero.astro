</section>

<style>
  .hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    overflow: hidden;
    padding-top: 72px;
  }

  .hero-background {
    position: absolute;
    inset: 0;
    z-index: -1;
  }

  .hero-gradient {
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, #0a0a0a 0%, #111111 50%, #1a1a1a 100%);
  }

  .hero-pattern {
    position: absolute;
    inset: 0;
    opacity: 0.1;
    background-image: radial-gradient(circle at 1px 1px, #f97316 1px, transparent 0);
    background-size: 40px 40px;
  }

  .container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 80px;
    align-items: center;
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    background: rgba(249, 115, 22, 0.1);
    color: #f97316;
    padding: 8px 16px;
    border-radius: 50px;
    font-size: 14px;
    font-weight: 500;
    margin-bottom: 24px;
    border: 1px solid rgba(249, 115, 22, 0.2);
  }

  .badge-icon {
    font-size: 16px;
  }

  .hero-title {
    font-size: 56px;
    font-weight: 800;
    line-height: 1.1;
    margin-bottom: 24px;
    color: #ffffff;
  }

  .title-accent {
    background: linear-gradient(135deg, #f97316 0%, #dc2626 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-description {
    font-size: 20px;
    color: #9ca3af;
    margin-bottom: 40px;
    line-height: 1.6;
  }

  .hero-actions {
    display: flex;
    gap: 16px;
    margin-bottom: 48px;
  }

  .btn-large {
    padding: 16px 32px;
    font-size: 18px;
  }

  .hero-stats {
    display: flex;
    gap: 48px;
  }

  .stat {
    text-align: center;
  }

  .stat-number {
    font-size: 32px;
    font-weight: 700;
    color: #ffffff;
    margin-bottom: 4px;
  }

  .stat-label {
    font-size: 14px;
    color: #9ca3af;
    font-weight: 500;
  }

  .hero-visual {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .dashboard-mockup {
    background: #111111;
    border-radius: 20px;
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
    overflow: hidden;
    width: 100%;
    max-width: 500px;
    transform: rotate(5deg);
    animation: float 6s ease-in-out infinite;
    border: 1px solid #1f2937;
  }

  @keyframes float {
    0%, 100% { transform: rotate(5deg) translateY(0px); }
    50% { transform: rotate(5deg) translateY(-10px); }
  }

  .mockup-header {
    background: #1a1a1a;
    padding: 16px 20px;
    display: flex;
    align-items: center;
    gap: 12px;
    border-bottom: 1px solid #374151;
  }

  .mockup-dots {
    display: flex;
    gap: 6px;
  }

  .mockup-dots span {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: #dc2626;
  }

  .mockup-dots span:nth-child(2) {
    background: #f59e0b;
  }

  .mockup-dots span:nth-child(3) {
    background: #10b981;
  }

  .mockup-title {
    font-weight: 600;
    color: #e5e7eb;
    font-size: 14px;
  }

  .mockup-content {
    padding: 24px;
  }

  .mockup-metric {
    margin-bottom: 24px;
  }

  .metric-label {
    font-size: 14px;
    color: #9ca3af;
    margin-bottom: 4px;
  }

  .metric-value {
    font-size: 32px;
    font-weight: 700;
    color: #ffffff;
    margin-bottom: 4px;
  }

  .metric-change {
    font-size: 14px;
    font-weight: 500;
  }

  .metric-change.positive {
    color: #10b981;
  }

  .mockup-chart {
    margin-bottom: 24px;
    padding: 16px;
    background: #1a1a1a;
    border-radius: 12px;
  }

  .chart-bars {
    display: flex;
    align-items: end;
    gap: 8px;
    height: 80px;
  }

  .bar {
    flex: 1;
    background: linear-gradient(135deg, #f97316 0%, #dc2626 100%);
    border-radius: 4px 4px 0 0;
    min-height: 20px;
    animation: grow 2s ease-out;
  }

  @keyframes grow {
    from { height: 0; }
  }

  .mockup-services {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .service-item {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 8px;
    border-radius: 8px;
    background: #1a1a1a;
  }

  .service-icon {
    width: 32px;
    height: 32px;
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 600;
    font-size: 12px;
    color: white;
  }

  .service-icon.aws {
    background: #ff9900;
  }

  .service-icon.gcp {
    background: #4285f4;
  }

  .service-icon.azure {
    background: #0078d4;
  }

  .service-name {
    flex: 1;
    font-weight: 500;
    color: #e5e7eb;
    font-size: 14px;
  }

  .service-cost {
    font-weight: 600;
    color: #ffffff;
    font-size: 14px;
  }

  @media (max-width: 768px) {
    .hero {
      min-height: auto !important;
      padding: 120px 0 80px !important;
      text-align: center !important;
      display: flex !important;
      align-items: center !important;
      justify-content: center !important;
    }

    .container {
      display: flex !important;
      flex-direction: column !important;
      align-items: center !important;
      justify-content: center !important;
      gap: 48px !important;
      padding: 0 20px !important;
      width: 100% !important;
      max-width: 100% !important;
      grid-template-columns: none !important;
    }

    .hero-content {
      display: flex !important;
      flex-direction: column !important;
      align-items: center !important;
      text-align: center !important;
      width: 100% !important;
      max-width: 600px !important;
      order: 2 !important;
    }

    .hero-badge {
      margin-bottom: 20px !important;
      align-self: center !important;
    }

    .hero-title {
      font-size: 36px !important;
      text-align: center !important;
      margin-bottom: 20px !important;
      line-height: 1.2 !important;
      width: 100% !important;
    }

    .hero-description {
      font-size: 16px !important;
      text-align: center !important;
      margin-bottom: 32px !important;
      max-width: 90% !important;
      width: 100% !important;
    }

    .hero-actions {
      display: flex !important;
      flex-direction: column !important;
      align-items: center !important;
      width: 100% !important;
      gap: 12px !important;
      margin-bottom: 40px !important;
    }

    .hero-actions .btn {
      width: 100% !important;
      max-width: 280px !important;
      justify-content: center !important;
      display: flex !important;
    }

    .hero-stats {
      display: flex !important;
      justify-content: center !important;
      gap: 24px !important;
      flex-wrap: wrap !important;
      width: 100% !important;
    }

    .hero-visual {
      order: 1 !important;
      margin-bottom: 40px !important;
      width: 100% !important;
      display: flex !important;
      justify-content: center !important;
      align-items: center !important;
    }

    .dashboard-mockup {
      max-width: 320px !important;
      transform: rotate(0deg) !important;
      margin: 0 auto !important;
      width: 100% !important;
    }
  }

  @media (max-width: 480px) {
    .hero {
      padding: 100px 0 60px !important;
      display: flex !important;
      align-items: center !important;
      justify-content: center !important;
    }

    .container {
      display: flex !important;
      flex-direction: column !important;
      align-items: center !important;
      justify-content: center !important;
      padding: 0 16px !important;
      width: 100% !important;
      max-width: 100% !important;
      grid-template-columns: none !important;
    }

    .hero-content {
      width: 100% !important;
      max-width: 100% !important;
      order: 2 !important;
    }

    .hero-title {
      font-size: 28px !important;
      margin-bottom: 16px !important;
      text-align: center !important;
      width: 100% !important;
    }

    .hero-description {
      font-size: 15px !important;
      margin-bottom: 28px !important;
      max-width: 95% !important;
      text-align: center !important;
      width: 100% !important;
    }

    .hero-actions {
      margin-bottom: 32px !important;
      width: 100% !important;
      display: flex !important;
      flex-direction: column !important;
      align-items: center !important;
    }

    .hero-actions .btn {
      max-width: 100% !important;
      padding: 14px 24px !important;
      font-size: 16px !important;
      width: 100% !important;
      display: flex !important;
      justify-content: center !important;
    }

    .hero-stats {
      gap: 20px !important;
      display: flex !important;
      justify-content: center !important;
      width: 100% !important;
    }

    .stat-number {
      font-size: 24px !important;
    }

    .hero-visual {
      order: 1 !important;
      margin-bottom: 32px !important;
      width: 100% !important;
      display: flex !important;
      justify-content: center !important;
    }

    .dashboard-mockup {
      max-width: 280px !important;
      margin: 0 auto !important;
      width: 100% !important;
    }
  }
</style>